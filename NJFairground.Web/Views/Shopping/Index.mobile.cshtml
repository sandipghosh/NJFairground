@model List<NJFairground.Web.Models.PageItemModel>

@{
    ViewBag.Title = "Shopping | Sussex County Fairgrounds";
    Layout = "~/Views/Shared/_LayoutPage.mobile.cshtml";
    ViewBag.PageId = "shopping";
}

<h2 class="title">Shopping</h2>
<div class="ui-grid-solo fun-blocks">
    @foreach (var pageItemdata in Model)
    {
        <div class="ui-block-a fun-block">
            <div class="text">
                <h4>@pageItemdata.PageHeaderText</h4>
                <p>
                    <span>@pageItemdata.PageSubHeaderText</span>
                    Applications for the 2014 Fair are now available
                </p>
            </div>
            <div class="action">
                <a title="Details" class="details" href="@Url.Action("Index", "Details", new { PageId = Convert.ToInt32(NJFairground.Web.Models.Page.Shopping), PageItemId = pageItemdata.PageItemId }) ">Details</a>
                <img class="fun-pic" src='@Url.Content("~/Styles/images/" + pageItemdata.PageItemImage)' alt="">
            </div>
        </div>
    }
</div>
