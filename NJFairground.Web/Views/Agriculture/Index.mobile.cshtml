
@using NJFairground.Web.Utilities
@using NJFairground.Web.Models
@model List<PageItemModel>

@{
    ViewBag.Title = "Agriculture Learning Center | Sussex County Fairgrounds";
    ViewBag.PageId = "agriculture";
    Layout = "~/Views/Shared/_LayoutPage.mobile.cshtml";
}
<h2 class="title">Agriculture/AG Learning Center</h2>
<div class="ui-grid-solo inner-page">
    <img class="inner-banner" src='@Url.Content("~/Styles/images/banner-agriculture.jpg")' alt="">
    <div class="ui-block-a">
        @foreach (var pageItemdata in Model)
        {
            <div class="info-block">
                <a title="Details" class="details" href="@Url.Action("Index", "Details", new { PageId = Convert.ToInt32(NJFairground.Web.Models.Page.AGLearningCenter), PageItemId = pageItemdata.PageItemId }) ">Details</a>
                <img class="info-pic" src='@Url.Content(string.Format("{0}{1}", CommonUtility.GetAppSetting<string>("UploadFolderItemImagePath"), pageItemdata.PageItemImage))' alt="">
                <h4>@pageItemdata.PageHeaderText</h4>
                <p>@pageItemdata.PageSubHeaderText</p>
            </div>
        }
    </div>
</div>
