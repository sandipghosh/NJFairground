@model List<NJFairground.Web.Models.PageItemModel>
@using NJFairground.Web.Utilities
@{
    ViewBag.Title = "Index.mobile";
}
<h2 class="title">Promote Your Events Here!</h2>
<div class="ui-grid-solo highlights promote inner-page">
    <img class="inner-banner" src='@Url.Content("~/Styles/images/banner-promote.jpg")' alt="">
    @foreach (var pageItemdata in Model)
    {
        <div class="ui-block-a highlight">
            <div class="text">
                <h4>@pageItemdata.PageHeaderText</h4>
                <p>@pageItemdata.PageSubHeaderText</p>
            </div>
            <div class="action">
                <a title="Details" class="details" href="@Url.Action("Index", "Details", new { PageId = Convert.ToInt32(NJFairground.Web.Models.Page.Promote), PageItemId = pageItemdata.PageItemId }) ">Details</a>
                <img class="star" src='@Url.Content(string.Format("{0}{1}", CommonUtility.GetAppSetting<string>("UploadFolderItemImagePath"), pageItemdata.PageItemImage))' alt="">
            </div>
        </div>
    }
</div>
