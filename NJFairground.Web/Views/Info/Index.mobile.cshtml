@model List<NJFairground.Web.Models.PageItemModel>
@using NJFairground.Web.Utilities
@{
    ViewBag.Title = "Info | Sussex County Fairgrounds";
    ViewBag.PageId = "info";
    Layout = "~/Views/Shared/_LayoutPage.mobile.cshtml";
}

@section navbar{
    @Html.Partial("_NavigationBar.mobile", (List<string>)ViewBag.NavBarItems)
}

@section innerTitle{
    <img class="inner-banner" src='@Url.Content("~/Styles/images/Info Main Picture.jpg")' alt="">
    <h2 class="inner-title">@Html.Raw("General Information")</h2>
}

<div class="ui-grid-solo inner-page">
    @foreach (var pageItemdata in Model)
    {
        <div class="info-block">
            <img class="info-pic" src='@Url.Content(string.Format("{0}{1}", CommonUtility.GetAppSetting<string>("UploadFolderItemImagePath"), pageItemdata.PageItemImage))' alt="">@*info-pic1.png*@
            <a title="Details" class="details" href="@Url.Action("Index", "Details", new { PageId = Convert.ToInt32(NJFairground.Web.Models.Page.Info), PageItemId = pageItemdata.PageItemId }) ">Details</a>
            <h4>@pageItemdata.PageHeaderText</h4>
            <p>@pageItemdata.PageSubHeaderText</p>
        </div>
    }
</div>

