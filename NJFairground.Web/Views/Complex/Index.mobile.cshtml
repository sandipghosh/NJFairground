
@using NJFairground.Web.Models
@using NJFairground.Web.Utilities
@model List<PageItemModel>

@{
    ViewBag.Title = "Fairgrounds Complex | Sussex County Fairgrounds";
    ViewBag.PageId = "complex";
    Layout = "~/Views/Shared/_LayoutPage.mobile.cshtml";
}
<h2 class="title">Fairgrounds Complex All Season/Events/Rentals</h2>
<div class="ui-grid-solo highlights complex inner-page">
    <img class="inner-banner" src='@Url.Content("~/Styles/images/banner-complex.jpg")' alt="">
    @foreach (var pageItemdata in Model)
    {
        <div class="ui-block-a highlight">
            <div class="text">
                <h4>@pageItemdata.PageHeaderText</h4>
                <p>@pageItemdata.PageSubHeaderText</p>
            </div>
            <div class="action">
                <a title="Details" class="details" href="@Url.Action("Index", "Details", new { PageId = Convert.ToInt32(NJFairground.Web.Models.Page.Complex), PageItemId = pageItemdata.PageItemId }) ">Details</a>
                <img class="star" src='@Url.Content(string.Format("{0}{1}", CommonUtility.GetAppSetting<string>("UploadFolderItemImagePath"), pageItemdata.PageItemImage))' alt="">
            </div>
        </div>
    }
</div>
