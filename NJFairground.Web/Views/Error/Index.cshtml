@{
    Layout = null;
    string msg = string.IsNullOrEmpty((string)ViewBag.ErrorMessage)
        ? "Connection error. Please retry." : (string)ViewBag.ErrorMessage;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sussex County Fairgrounds</title>
</head>
<body style="background-image:url('@Url.Content("~/Styles/Images/mainpage-bg.jpg")'); background-repeat:no-repeat; background-position:center; background-size:cover; background-attachment:fixed; margin:0; padding:0; height:100%; width:100%; font-family">
    <a href="javascript:void(0)">
