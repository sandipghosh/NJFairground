@model IEnumerable<NJFairground.Web.Models.PageItemModel>

<table id="subpages" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Header</th>
            <th>Sub Header</th>
            <th>Image</th>
            <th>Content</th>
            <th>Order Index</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PageHeaderText)
                </td>
                <td>
                    @Html.Raw(item.PageSubHeaderText)
                </td>
                <td>
                    <img src="@item.PageItemImageUrl" width="50" />
                </td>
                <td>
                    @Html.Raw(item.PageItemDetailText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemOrder)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "Edit", new { pageItemId = item.PageItemId }, new AjaxOptions { OnSuccess = "ShowSubPageInsertScreen" }) |
                    @Ajax.ActionLink("Delete", "Delete", new { pageId = item.PageId, pageItemId = item.PageItemId }, new AjaxOptions {OnBegin="return DeleteConfirmation()", OnSuccess = "ShowSubPageInsertScreen" })
                </td>
            </tr>
        }
    </tbody>
</table>
